{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "prefer-template": [
	    	"error"  
        ],
        "semi": [
            "error",
            "always"
        ],
	    "no-tabs": [
		    "off"
	    ],
	    "indent": [
	    	"error",
	    	"tab",
	    	{ "SwitchCase": 1 }
	    ],
	    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
	    "camelcase": [ "off" ],
	    "prefer-const": [ "error" ]
    }
}